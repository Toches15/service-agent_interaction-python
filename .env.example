# Application Configuration
APP_NAME="FastAPI Template"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-must-be-at-least-32-characters
ALLOWED_HOSTS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=text  # Use "json" for production, "text" for development

# API Configuration
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# Database Configuration
USE_DATABASE=false  # Set to true to enable database support
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/dbname  # Production PostgreSQL
# DATABASE_URL=sqlite+aiosqlite:///./custom.db  # Development SQLite
# DATABASE_URL=mysql+aiomysql://user:password@localhost/dbname  # MySQL

